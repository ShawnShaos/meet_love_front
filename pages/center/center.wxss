/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 10px;
  height: 200rpx;
  /* background: green; */
}

.userinfo-item {
  display: flex;
  flex-direction: row;
  line-height: 168rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: rgb(0, 0, 0);
  font-size: 30px;
}

.user-attention {
  height: 128rpx;
  margin: 20rpx;
  margin-left: auto;
  padding-right: 5px;
  color: black;
  /* background: yellow; */
  font-size: 20px;
  display: flex;
  flex-direction: row;
}

.user-attention-list {
  padding: 10px 10px;
  /* background: yellowgreen; */
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-attention-list-line {
  border-right: 1px solid #aaa;
}

.user-attention-list-tag {
  color: #aaa;
  font-size: 15px;
}

.user-line {
  background: #d6d4d4;
  height: 18rpx;
}

.user-menu {
  height: 300rpx;
  display: flex;
  flex-direction: row;
  /* background: yellow */
}

.user-menu-item {
  padding: 14rpx;
  width: 25%;
  height: 122rpx;
  display: flex;
  flex-direction: column;
  /* background: yellow; */
  align-items: center;
  font-size: 15px;
}

.user-menu-image {
  width: 60rpx;
  height: 60rpx;
}

.user-recommendd {
  height: 100rpx;
  background: yellowgreen;
  line-height: 100rpx;
  font-size: 10px;
}

.usermotto {
  margin-top: 200px;
}
